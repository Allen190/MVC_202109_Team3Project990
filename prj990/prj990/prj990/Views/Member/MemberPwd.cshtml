@model prj990.Models.tMember

@{ ViewBag.Title = "MemberPwd";
  Layout = "~/Views/Shared/_LayoutMember.cshtml"; }

<style>
  * {
    box-sizing: border-box
  }

  .MemberPwd {
    width: 420px;
    margin: 0 auto;
  }
</style>


@using(Html.BeginForm())
  {
@Html.AntiForgeryToken()

        <div class="py-5">
          <div class="MemberPwd">
            <div class="card shadow border-0">
              <div class="card-body">
                <div class="form-horizontal">
                  <h2 class="text-center text-big1">修改密碼</h2>
                  @Html.ValidationSummary(true,"",new { @class = "text-danger" })
                  @Html.HiddenFor(model => model.fId)

                  <div class="form-group">
                    @Html.LabelFor(model => model.fPWd,htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                      @Html.EditorFor(model => model.fPWd,new { htmlAttributes = new { @class = "form-control",Type = "password",value = "" } })
                      @Html.ValidationMessageFor(model => model.fPWd,"",new { @class = "text-danger" })
                    </div>
                  </div>

                  <div class="form-group">
                    @Html.LabelFor(model => model.fRePwd,htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                      @Html.EditorFor(model => model.fRePwd,new { htmlAttributes = new { @class = "form-control",Type = "password",value = "" } })
                      @Html.ValidationMessageFor(model => model.fRePwd,"",new { @class = "text-danger" })
                    </div>
                  </div>



                  <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                      <input type="submit" value="儲存修改" class="btn btn-info  w-100 d-block  mt-3" onclick="return confirm('確定要修改密碼嗎?')" />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>}

<div>
  @Html.ActionLink("個人首頁","MemberInfo","null",new { @class = "btn btn-dark" })
</div>


@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
